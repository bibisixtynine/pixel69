<!-- c'est par ici que se lance la webapp !-->
<!-- le langage utilisé est le HTML qui est plutôt fait pour faciliter la mise
     en page du site, sa configuration, dont le chargement des librairies,
     et surtout le code javascript de l'app de Piou, contenu dans le fichier
     dessin.js.
     L'îcone de la webapp est dans 'Assets'.
-->

<html>
  <!---->
  <!-- H E A D --------------------------------------------------------->
  <!---->
  <head>
    <!-- nom de l'app -->
    <title>pixel69 0.2b+</title>

    <!-- pwa setup ---------------------------------->
    <meta
      name="viewport"
      content="viewport-fit=cover,user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1"
    />
    <meta name="theme-color" content="#000000" />

    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />

    <link
      rel="icon"
      href="https://cdn.glitch.global/1a69196f-7dd1-48fa-8c13-3cd2b83bae7a/draw-69.png?v=1645921642438"
    />
    <link
      id="favicon"
      rel="icon"
      href="https://cdn.glitch.global/1a69196f-7dd1-48fa-8c13-3cd2b83bae7a/draw-69.png?v=1645921642438"
      type="image/png"
    />
    <link
      rel="apple-touch-icon"
      href="https://cdn.glitch.global/1a69196f-7dd1-48fa-8c13-3cd2b83bae7a/draw-69.png?v=1645921642438"
    />

    <!-- PWA setup - update public/sw.js if you add your own assets like a new .css file -->
    <link rel="manifest" href="manifest.json" />
    <script>
      if (location.protocol == "http:") location.protocol = "https:";
      if ("serviceWorker" in navigator) {
        navigator.serviceWorker
          .register("sw.js")
          .then((reg) => console.log("Service Worker registered", reg))
          .catch((err) =>
            console.error("Service Worker **not** registered", err)
          );
      } else {
        console.warn("Service Worker not supported in this browser");
      }
    </script>
    <!-- pwa setup ---------------------------------->

    <!-- feuille de style -->
    <link rel="stylesheet" href="style.css" />

    <!-- code javascript de la webapp ---------------->
    <script defer type="module" src="main.js"></script>
  </head>
  <!---->
  <!-- H E A D --------------------------------------------------------->
  <!---->

  <body>
    <canvas class="rainbow-pixel-canvas"></canvas>

    <div class="outer-container">
      <div class="inner-container" id="ui"></div>
    </div>

    <div
      style="
        position: absolute;
        background-color: yellow;
        color: red;
        top: 50%;
        left: 50%;
      "
    >
      
    </div>

    <script>
      /* disable on specific html element */
      let canvases = document.querySelectorAll(".rainbow-pixel-canvas");
      canvases[0].addEventListener(
        "touchstart",
        function (event) {
          event.preventDefault();
        },
        false
      );
      window.addEventListener("gesturestart", (e) => e.preventDefault());
      window.addEventListener("gesturechange", (e) => e.preventDefault());
      window.addEventListener("gestureend", (e) => e.preventDefault());
    </script>
  </body>
</html>
